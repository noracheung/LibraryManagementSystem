@model LibraryManagementSystem.Models.Book
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var imagePath = "/UploadedFiles/" + Model.FilePath;

}

<h2>@Model.Name</h2>
@if(!String.IsNullOrEmpty(Model.FilePath))
    {
<img src=@imagePath width="100" />
<br />
    }
<ul>
    <li>Title: @Model.Name</li>
    <li>Author: @Model.Author</li>
    <li>Type: @Model.Type.Type</li>
    <li>ISBN: @Model.ISBN</li>
    <li>Number in Stock: @Model.NumberInStock</li>
</ul>
